<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.SysPermissionMapper">

	<resultMap type="com.ruoyi.project.system.domain.SysPermission" id="SysPermissionResult">
		<id     property="id"            column="id"             />
		<result property="permissionName" column="permission_name" />
		<result property="permissionCode" column="permission_code" />
		<result property="permissionType" column="permission_type" />
		<result property="moduleName"    column="module_name"    />
		<result property="parentId"      column="parent_id"      />
		<result property="orderNum"      column="order_num"      />
		<result property="status"        column="status"        />
		<result property="createBy"      column="create_by"      />
		<result property="createTime"    column="create_time"    />
		<result property="updateBy"      column="update_by"      />
		<result property="updateTime"    column="update_time"    />
		<result property="remark"        column="remark"         />
	</resultMap>

	<sql id="selectPermissionVo">
        select id, permission_name, permission_code, permission_type, module_name, parent_id, order_num, status, create_by, create_time, update_by, update_time, remark
        from sys_permission
    </sql>

	<select id="selectPermissionList" parameterType="com.ruoyi.project.system.domain.SysPermission" resultMap="SysPermissionResult">
		<include refid="selectPermissionVo"/>
		<where>
			<if test="permissionName != null and permissionName != ''">
				AND permission_name like concat('%', #{permissionName}, '%')
			</if>
			<if test="permissionCode != null and permissionCode != ''">
				AND permission_code like concat('%', #{permissionCode}, '%')
			</if>
			<if test="status != null and status != ''">
				AND status = #{status}
			</if>
		</where>
		order by order_num asc
	</select>

	<select id="selectPermissionById" parameterType="Long" resultMap="SysPermissionResult">
		<include refid="selectPermissionVo"/>
		where id = #{id}
	</select>

	<insert id="insertPermission" parameterType="com.ruoyi.project.system.domain.SysPermission">
		insert into sys_permission(
			<if test="permissionName != null and permissionName != ''">permission_name,</if>
			<if test="permissionCode != null and permissionCode != ''">permission_code,</if>
			<if test="permissionType != null and permissionType != ''">permission_type,</if>
			<if test="moduleName != null and moduleName != ''">module_name,</if>
			<if test="parentId != null">parent_id,</if>
			<if test="orderNum != null">order_num,</if>
			<if test="status != null and status != ''">status,</if>
			<if test="createBy != null and createBy != ''">create_by,</if>
			<if test="remark != null and remark != ''">remark,</if>
			create_time
		)values(
			<if test="permissionName != null and permissionName != ''">#{permissionName},</if>
			<if test="permissionCode != null and permissionCode != ''">#{permissionCode},</if>
			<if test="permissionType != null and permissionType != ''">#{permissionType},</if>
			<if test="moduleName != null and moduleName != ''">#{moduleName},</if>
			<if test="parentId != null">#{parentId},</if>
			<if test="orderNum != null">#{orderNum},</if>
			<if test="status != null and status != ''">#{status},</if>
			<if test="createBy != null and createBy != ''">#{createBy},</if>
			<if test="remark != null and remark != ''">#{remark},</if>
			sysdate()
		)
	</insert>

	<update id="updatePermission" parameterType="com.ruoyi.project.system.domain.SysPermission">
		update sys_permission
		<set>
			<if test="permissionName != null and permissionName != ''">permission_name = #{permissionName},</if>
			<if test="permissionCode != null and permissionCode != ''">permission_code = #{permissionCode},</if>
			<if test="permissionType != null and permissionType != ''">permission_type = #{permissionType},</if>
			<if test="moduleName != null">module_name = #{moduleName},</if>
			<if test="parentId != null">parent_id = #{parentId},</if>
			<if test="orderNum != null">order_num = #{orderNum},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
			<if test="remark != null">remark = #{remark},</if>
			update_time = sysdate()
		</set>
		where id = #{id}
	</update>

	<delete id="deletePermissionByIds" parameterType="Long">
		delete from sys_permission where id in
		<foreach collection="array" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>
